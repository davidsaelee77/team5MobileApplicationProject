<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.AddChatFragment">


    <EditText
        android:id="@+id/editText_searchUsername_addcontactfragment"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:hint="@string/editText_addusername"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_addUser_addccontactfragment" />

    <TextView
        android:id="@+id/textView_addUser_addccontactfragment"
        android:layout_width="360dp"
        android:layout_height="0dp"
        android:layout_marginTop="103dp"
        android:text="@string/textplain_contacts_search"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark_BG"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="423dp"
        android:src="@drawable/ic_search_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_searchUsername_addcontactfragment" />


</androidx.constraintlayout.widget.ConstraintLayout>