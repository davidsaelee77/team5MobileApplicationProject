<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_weather_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.weather.WeatherListFragment">

    <TextView
        android:id="@+id/weather_forecast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:text="Current Forecast:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_loc_text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_today_list"
        android:layout_width="420dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_hourly_text"
        tools:context="edu.uw.tcss450.griffin.ui.weather.WeatherListFragment"
        tools:listitem="@layout/fragment_weather_card" />

    <TextView
        android:id="@+id/weather_hourly_text"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="Today's Forecast"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/weather_today_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_forecast_text" />

    <TextView
        android:id="@+id/weather_weekly_text"
        android:layout_width="420dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="Weekly Forecast"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/weather_week_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_today_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_week_list"
        android:layout_width="414dp"
        android:layout_height="146dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_weekly_text"
        tools:context="edu.uw.tcss450.griffin.ui.weather.WeatherListFragment"
        tools:listitem="@layout/fragment_weather_week_card">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/weather_loc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Location:"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_place_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/weather_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seattle"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/weather_search_button"
        app:layout_constraintStart_toEndOf="@+id/weather_loc_text"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_icon_image"
        android:layout_width="54dp"
        android:layout_height="44dp"
        android:src="@drawable/weather_clear_art"
        app:layout_constraintBottom_toTopOf="@+id/weather_current_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403"
        app:layout_constraintStart_toEndOf="@+id/weather_forecast_text" />

    <TextView
        android:id="@+id/weather_current_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/weather_hourly_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toEndOf="@+id/weather_forecast_text"
        app:layout_constraintTop_toBottomOf="@+id/weather_place_text"
        app:layout_constraintVertical_bias="0.578" />

    <ImageButton
        android:id="@+id/weather_search_button"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:src="@android:drawable/ic_search_category_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather_place_text"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_search_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>