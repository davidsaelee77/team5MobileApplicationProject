<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/temp_place_holder_CONVERSATIONS"
        android:layout_width="407dp"
        android:layout_height="481dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="160dp"
        android:background="#673AB7"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CONVERSATIONS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/conversation_text_message"
        android:layout_width="277dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:hint="@string/conversation_message_text"
        app:layout_constraintBaseline_toBaselineOf="@+id/conversation_button_send"
        app:layout_constraintEnd_toStartOf="@+id/conversation_button_send" />

    <Button
        android:id="@+id/conversation_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="@string/conversation_send_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp_place_holder_CONVERSATIONS" />

</androidx.constraintlayout.widget.ConstraintLayout>