<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_UW</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_UW</item>
        <item name="colorAccent">@color/colorAccent_UW</item>
    </style>


    <style name="SonicsTheme">
       <!-- Customize your theme here. --> >
        <item name="colorPrimary">@color/colorPrimary_SONIC</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_SONIC</item>
        <item name="colorAccent">@color/colorAccent_SONIC</item>
    </style>

    <style name="BluegreyTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_BG</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_BG</item>
        <item name="colorAccent">@color/colorAccent_BG</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>


