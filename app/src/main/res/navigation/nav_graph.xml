<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.home.HomeFragment"
        android:label="@string/home_menu_text"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.contacts.ContactFragment"
        android:label="@string/contacts_menu_text"
        tools:layout="@layout/fragment_contact" />
    <fragment
        android:id="@+id/weatherFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.weather.WeatherFragment"
        android:label="@string/weather_menu_text"
        tools:layout="@layout/fragment_weather" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.chat.ChatFragment"
        android:label="@string/chat_menu_text"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/action_chatFragment_to_conversationFragment"
            app:destination="@id/conversationFragment" />
        <action
            android:id="@+id/action_chatFragment_to_newMessageFragment"
            app:destination="@id/newMessageFragment" />
    </fragment>
    <fragment
        android:id="@+id/conversationFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.chat.ConversationFragment"
        android:label="@string/conversation_text_title" />
    <fragment
        android:id="@+id/newMessageFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.chat.NewMessageFragment"
        android:label="@string/newmessage_text_title" />
    <fragment
        android:id="@+id/changeThemeFragment"
        android:name="edu.uw.tcss450.team5tcss450client.ui.settings.ChangeThemeFragment"
        android:label="fragment_change_theme"
        tools:layout="@layout/fragment_change_theme" />
</navigation>